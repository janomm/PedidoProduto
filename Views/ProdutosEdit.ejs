<%- include('partials/header.ejs') %>
<%- include('partials/navbar.ejs') %>
<div class="container">
    <hr>
    <div class="card">
        <div class="card-header">
            <h2>Editar Produto</h2>
        </div>
        <div class="card-body">
            <form method="post" action="/produtos/update">
                <input class="form-control" type="hidden" name="id" value="<%= produto.id %>">
                <input class="form-control" type="text" name="descricao" value="<%= produto.descricao %>" placeholder="Descricao"><br> 
                <input class="form-control" type="text" name="peso_liquido" value="<%= produto.peso_liquido %>" placeholder="Peso Líquido"><br> 
                <input class="form-control" type="text" name="peso_unitario" value="<%= produto.peso_unitario %>" placeholder="Peso Unitário"><br> 
                <button class="btn btn-success">Atualizar</button>
            </form>
        </div>
    </div>
</div>
<%- include('partials/footer.ejs') %>
                <input class="form-control" type="text" id="cidade" name="cidade" placeholder="Cidade" value="<%= cliente.cidade %>"><br> 
                <input class="form-control" type="text" id="uf" name="uf" placeholder="UF" value="<%= cliente.uf %>"><br> 
